{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<link rel="stylesheet" href="{{ 'product-tab.css' | asset_url }}">

<div class="color-{{ section.settings.color_scheme }} gradient isolate">
  <div class="product-tab page-width section-{{ section.id }}-padding">
    {% assign metaobjects = shop.metaobjects.measurements.values %}
    {% for item in metaobjects %}
      {{ item.field }}
      {{ item.field.value }}
    {% endfor %}
    <div class="product-tab__wrapper">
      <nav class="product-tab__links d-flex list-unstyled">
        <li
          class="                product-tab__navigation product-tab__navigation--description active"
          id="description"
        >
          <a
            href="#/description"
            data-target="description"
            class="product-tab__link d-flex align-items-center subnav-toggle"
          >
            Description
            {% render 'icon-chevron' %}
          </a>
        </li>
        <li
          class="                product-tab__navigation product-tab__navigation--description active"
          id="description"
        >
          {%- if product.metafields.custom.ingredients != blank -%}
            <a
              href="#/description"
              data-target="description"
              class="product-tab__link d-flex align-items-center"
            >
              Garment Care
            </a>
          {% endif %}
        </li>
      </nav>
      <div
        class="product-tab__item product-tab__item--description active"
        id="description"
      >
        {{ product.description }}
        {% comment %}
          {%- case block.type -%}
            {%- when 'description' -%}
              {%- if product.metafields.custom.long_description != blank -%}
                {{ product.metafields.custom.long_description | metafield_tag }}
              {%- endif -%}
            {%- when '@app' -%}
              {% render block %}
            {%- when 'ingredients' -%}
              {%- if product.metafields.custom.ingredients != blank -%}
                {{ product.metafields.custom.ingredients | metafield_tag }}
              {%- endif -%}
          {%- endcase -%}
        {% endcomment %}
      </div>
      <div
        class="product-tab__item product-tab__item--garment"
        id="garment"
      >
        {%- if product.metafields.custom.ingredients != blank -%}
          {{ product.metafields.custom.ingredients | metafield_tag }}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

<script src="{{ 'product-tab.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Product Description",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Product Description"
    }
  ],
  "templates": ["product"]
}
{% endschema %}
