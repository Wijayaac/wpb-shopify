{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<link rel="stylesheet" href="{{ 'product-tab.css' | asset_url }}">

<div class="color-{{ section.settings.color_scheme }} gradient isolate">
  <div class="product-tab page-width section-{{ section.id }}-padding">
    <div class="product-tab__wrapper">
      <nav class="product-tab__links d-flex list-unstyled">
        <li
          class="product-tab__navigation product-tab__navigation--description active"
          id="description"
        >
          <a
            href="#/description"
            data-target="description"
            class="product-tab__link d-flex align-items-center subnav-toggle"
          >
            Description
            {% render 'icon-chevron' %}
          </a>
        </li>
        <li
          class="product-tab__navigation product-tab__navigation--care"
          id="care"
        >
          <a
            href="#/care"
            data-target="care"
            class="product-tab__link d-flex align-items-center"
          >
            Garment Care
          </a>
        </li>
        <li
          class="product-tab__navigation product-tab__navigation--care"
          id="care"
        >
          <a
            href="#/size"
            data-target="size"
            class="product-tab__link d-flex align-items-center"
          >
            Size & Fit
          </a>
        </li>
      </nav>
      {% comment %} Description {% endcomment %}
      <div
        class="product-tab__item product-tab__item--description active"
        id="description"
      >
        {{ product.description }}
      </div>
      {% comment %} Care {% endcomment %}
      <div
        class="product-tab__item product-tab__item--care"
        id="care"
      >
        {%- if product.metafields.custom.garment_care.value != blank -%}
          <ul>
            {% for block in product.metafields.custom.garment_care.value %}
              <li>{{ block.instruction.value }}</li>
            {% endfor %}
          </ul>
        {%- endif -%}
      </div>
      {% comment %} Size Fit {% endcomment %}
      <div
        class="product-tab__item product-tab__item--size"
        id="size"
      >
        {%- if product.metafields.custom.measurements.value != blank -%}
          {% for block in product.metafields.custom.measurements.value %}
            {%- capture measurement_name -%}{{measurement_name }}, {{block.name.value}}{%- endcapture -%}
          {% endfor %}
        {%- endif -%}
        {%- liquid
          assign measurements = measurement_name | replace_first: ',', '' | split: ','
          assign measurementsSize = measurements.size | minus: 1
        -%}
        {% for idx in (0..measurementsSize) %}
          {%- if product.metafields.custom.sm_size.value != blank -%}
            {%- capture s -%}{{ s }}, {{ product.metafields.custom.sm_size.value[idx] }}{%- endcapture -%}
          {%- endif -%}
          {%- if product.metafields.custom.ml_size.value != blank -%}
            {%- capture m -%}{{ m }}, {{ product.metafields.custom.ml_size.value[idx] }}{%- endcapture -%}
          {%- endif -%}
          {%- if product.metafields.custom.xl_size.value != blank -%}
            {%- capture l -%}{{ l }}, {{ product.metafields.custom.xl_size.value[idx] }}{%- endcapture -%}
          {%- endif -%}
          {%- if product.metafields.custom.one_size.value != blank -%}
            {%- capture one -%}{{ one }}, {{ product.metafields.custom.one_size.value[idx] }}{%- endcapture -%}
          {%- endif -%}
        {% endfor %}
        {%- liquid
          assign sizes_s = s | replace_first: ',', '' | split: ','
          assign sizes_m = m | replace_first: ',', '' | split: ','
          assign sizes_l = l | replace_first: ',', '' | split: ','
          assign sizes_one = one | replace_first: ',', '' | split: ','
        -%}

        <table class="table">
          <thead>
            <tr>
              <th></th>
              {%- if sizes_s != blank -%}
                <th>S - M</th>
              {%- endif -%}
              {% if sizes_m != blank %}
                <th>M - L</th>
              {% endif %}
              {% if sizes_l != blank %}
                <th>L - XL</th>
              {% endif %}
              {% if sizes_one != blank %}
                <th>One Size</th>
              {% endif %}
            </tr>
          </thead>
          <tbody>
            {% for i in (0..measurementsSize) %}
              <tr>
                <td>{{ measurements[i] }}</td>
                {%- if sizes_s[i] != blank -%}
                  <td>{{ sizes_s[i] }}</td>
                {%- endif -%}
                {% if sizes_m[i] != blank %}
                  <td>{{ sizes_m[i] }}</td>
                {% endif %}
                {% if sizes_l[i] != blank %}
                  <td>{{ sizes_l[i] }}</td>
                {% endif %}
                {% if sizes_one[i] != blank %}
                  <td>{{ sizes_one[i] }}</td>
                {% endif %}
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script src="{{ 'product-tab.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Product Description",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Product Description"
    }
  ],
  "templates": ["product"]
}
{% endschema %}
